<!-- (5)[desktop: language section] -->
<section class='language'>
	<form action='/language' method='post'>
		<label>
			{{#if (eq language 'en')}}
				<input type='radio' name='language' value='en' checked />
			{{else}}
				<input type='radio' name='language' value='en' />
			{{/if}}

			<img draggable='false' src='/uploads/gb.svg' alt='gb flag' />
		</label>
		<label>
			{{#if (eq language 'nl')}}
				<input type='radio' name='language' value='nl' checked />
			{{else}}
				<input type='radio' name='language' value='nl' />
			{{/if}}
			<img draggable='false' src='/uploads/ned.svg' alt='nl flag' />
		</label>
		<input type='submit' value='Save language' />
	</form>

	<a href='/colorfilter' data-before='Color filter for Sanne'></a>
</section>