<h1>Rijksmuseum Art Online</h1>
<section class='mainContent'>
	<section class='staticInfo'>
		<header>
			<img draggable='false' src='/static/uploads/logoRijksmuseum.svg' alt='Rijksmuseum logo' />
		</header>
	</section>

	<section class='searchArea'>
		<form action='/art' method='get'>
			<section>
				{{#if (eq language 'nl')}}
					<p>Hoeveelheid resultaten:</p>
				{{else}}
					<p>Amount of results:</p>
				{{/if}}
				<fieldset>
					{{#if (eq resultCount '30')}}
						<input type='radio' name='resultCount' id='option-1' value='10' />
						<input type='radio' name='resultCount' id='option-2' value='20' />
						<input type='radio' name='resultCount' id='option-3' value='30' checked />
					{{else if (eq resultCount '20')}}
						<input type='radio' name='resultCount' id='option-1' value='10' />
						<input type='radio' name='resultCount' id='option-2' value='20' checked />
						<input type='radio' name='resultCount' id='option-3' value='30' />
					{{else}}
						<input type='radio' name='resultCount' id='option-1' value='10' checked />
						<input type='radio' name='resultCount' id='option-2' value='20' />
						<input type='radio' name='resultCount' id='option-3' value='30' />
					{{/if}}

					<label for='option-1'>
						<div></div>
						<span>10</span>
					</label>
					<label for='option-2'>
						<div></div>
						<span>20</span>
					</label>
					<label for='option-3'>
						<div></div>
						<span>30</span>
					</label>
				</fieldset>
			</section>
			<section>
				<div>
					<input
						type='text'
						placeholder='Search for artists, art pieces and more...'
						name='userInput'
						autocomplete='off'
						value='{{userInput}}'
					/>
				</div>
				<button aria-label='search' type='submit'>
					<svg fill='none' viewBox='0 0 41 41' xmlns='http://www.w3.org/2000/svg'>
						<path
							d='m18.333 35.667c9.573 0 17.333-7.7604 17.333-17.333 0-9.5729-7.7604-17.333-17.333-17.333-9.5729 0-17.333 7.7604-17.333 17.333 0 9.573 7.7604 17.333 17.333 17.333z'
						></path>
						<path d='m40 40-9.425-9.425'></path>
					</svg>
				</button>
			</section>
		</form>
	</section>

	<section class='loadingData'>
		<ul>
			{{#each artItem}}
				<li>
					<a href='/artItem/{{this.objectNumber}}' aria-label='view details of {{this.title}}'>
						<figure>
							<img
								srcset='{{sliceUrl this.webImage.url}}=s500 500w, {{sliceUrl
									this.webImage.url
								}}=s750 750w, {{sliceUrl this.webImage.url}}=s1000 1000w'
								sizes='(max-width: 600px) 500px, (max-width: 1000px) 750px, 1000px'
								src='{{sliceUrl this.webImage.url}}=s750'
								alt='{{this.longTitle}}'
							/>
						</figure>
						<div>
							<h2>{{this.title}}</h2>
							<p>{{this.principalOrFirstMaker}}</p>
						</div>
					</a>
				</li>
			{{/each}}
		</ul>
	</section>
</section>